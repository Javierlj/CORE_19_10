<p>Estas son las estadísticas:</p>

<p>NºUsuarios: <%=values[0]%></p>
<p>NºQuizzes: <%=values[1]%></p>
<p>NºTips: <%=values[2]%></p>

<div width="400" height="300">
    <canvas id="myChart" width="400px" height="400px"></canvas>
</div>
<script>

var ctx = document.getElementById('myChart').getContext('2d');
Chart.defaults.global.defaultFontSize= 20;
var myChart = new Chart(ctx, {
type: 'bar',
data: {
    labels: ['Usuarios', 'Quizzes', 'Tips'],
    datasets: [{
        label: "Nº",
        data: [<%=values%>],
        backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
            'rgba(255, 99, 132, 1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 1
    }]
},
options: {
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }
}
});
</script>